      let index = 0;

      const intro = document.getElementById('intro');
      const memorySection = document.getElementById('memory');
      const finalSection = document.getElementById('final');
      const photoBox = document.getElementById('photo');
      const textBox = document.getElementById('text');
      const count = document.getElementById('count');

      function render() {
        const memory = memories[index];
        photoBox.innerHTML = '';

        if (memory.media.type === 'image') {
          const img = document.createElement('img');
          img.src = memory.media.src;
          img.onerror = () => {
            photoBox.innerHTML = '<div style="color:white;padding:16px;text-align:center;">Image failed to load<br>Check filename & case</div>';
          };
          photoBox.appendChild(img);
        } else {
          const video = document.createElement('video');
          video.src = memory.media.src;
          video.controls = true;
          video.playsInline = true;
          video.preload = 'metadata';
          video.onerror = () => {
            photoBox.innerHTML = '<div style="color:white;padding:16px;text-align:center;">Video failed to load<br>Check format / filename / case</div>';
          };
          photoBox.appendChild(video);
        }

        textBox.innerHTML = `<p>${memory.text}</p>`;
        count.textContent = `Memory ${index + 1} of ${memories.length}`;
      }

      function startMemories() {
        intro.style.display = 'none';
        memorySection.classList.add('show');
        render();
      }

      function nextMemory() {
        if (index < memories.length - 1) {
          index++;
          render();
        } else {
          memorySection.style.display = 'none';
          finalSection.style.display = 'flex';
        }
      }

      function prevMemory() {
        if (index > 0) {
          index--;
          render();
        }
      }

      // START BUTTON
      const startBtn = document.getElementById('startBtn');
      startBtn.addEventListener('click', startMemories);

      // COUNTDOWN TO MIDNIGHT
      const countdownEl = document.getElementById('countdown');
      // COUNTDOWN TO MIDNIGHT (PRE-INTRO)
      const preCountdownEl = document.getElementById('preCountdown');
      let timer = null;

      function updateCountdown() {
        // üîì DEV MODE BYPASS
        if (DEV_BYPASS) {
          preCountdownEl.textContent = 'üõ† Dev mode: unlocked';
          document.getElementById('pre-intro').style.display = 'none';
          intro.style.display = 'flex';
          startBtn.disabled = false;
          startBtn.style.opacity = '1';
          startBtn.style.cursor = 'pointer';
          if (timer) clearInterval(timer);
          return;
        }

        const now = new Date();
        const midnight = new Date();
        midnight.setHours(24, 0, 0, 0 );
        const diff = midnight - now;

        if (diff <= 0) {
          preCountdownEl.textContent = '‚ú® It‚Äôs time ‚ú®';
          document.getElementById('pre-intro').style.display = 'none';
          intro.style.display = 'flex';
          startBtn.disabled = false;
          startBtn.style.opacity = '1';
          startBtn.style.cursor = 'pointer';
          clearInterval(timer);
          return;
        }

        const h = Math.floor(diff / (1000 * 60 * 60));
        const m = Math.floor((diff / (1000 * 60)) % 60);
        const s = Math.floor((diff / 1000) % 60);
        preCountdownEl.textContent = `Opening in ${h}h ${m}m ${s}s üí´`;
      }

      updateCountdown();
      timer = setInterval(updateCountdown, 1000);
      document.getElementById('nextBtn').addEventListener('click', () => {
        console.log('Next clicked');
        nextMemory();
      });
      document.getElementById('prevBtn').addEventListener('click', prevMemory);

      function spawnSparkle() {
        const s = document.createElement('div');
        s.className = 'sparkle';
        s.textContent = Math.random() > 0.5 ? 'üéÄ' : 'üñ§';
        s.style.left = Math.random() * 100 + 'vw';
        s.style.bottom = '-20px';
        s.style.fontSize = 14 + Math.random() * 20 + 'px';
        document.body.appendChild(s);
        setTimeout(() => s.remove(), 5000);
      }

      setInterval(spawnSparkle, 500);

      const kuroIcons = ['üñ§','üéÄ','üíú','‚ò†Ô∏è'];
      function spawnKuroBg() {
        const k = document.createElement('div');
        k.className = 'bg-kuro';
        k.textContent = kuroIcons[Math.floor(Math.random() * kuroIcons.length)];
        k.style.left = Math.random() * 100 + 'vw';
        k.style.fontSize = 18 + Math.random() * 22 + 'px';
        k.style.animationDuration = 14 + Math.random() * 10 + 's';
        document.body.appendChild(k);
        setTimeout(() => k.remove(), 20000);
      }

      setInterval(spawnKuroBg, 900);
    });
  </script>

